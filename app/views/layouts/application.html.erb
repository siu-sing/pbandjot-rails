<!DOCTYPE html>
<html>

<head>
	<title>Pbandjot</title>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<% if notice %>
    <p class="notice alert alert-success" style="margin:0;"><%= notice %></p>
    <% end %>

    <% if alert %>
    <p class="alert alert alert-danger" style="margin:0;"><%= alert %></p>
    <% end %>
    <div><%= link_to "Home", root_path %></div>
    <% if user_signed_in? %>
        <div>@<%= current_user.username %></div>
        <div>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
        </div>
    <% end %>
	<%= yield %>
</body>

</html>